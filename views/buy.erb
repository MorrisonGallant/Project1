          </ul>
		
        </div>
      </div>
    </div>
	
	<center><div id ="content" class ="content">
	<br>
		<% if @product.quantity.to_i < @quantity.to_i  && @quantity.to_i%>
			<h2> <%= @message %></h2>
			<a href = "/buy/<%= @product.id %>" class="btn btn-default btn-primary">Go back.</a>
		<% elsif @money.lol.to_i < 0 %>
			<h2> <%= @message %></h2>
			<a href = "/buy/<%= @product.id %>" class="btn btn-default btn-primary">Go back.</a>
		<% else %>
			<h2> Transaction Successful!</h2>
			<% @money.hash.each do |a,c| %>
			<p> <%= a %>: <%= c %> </p>
			<% end %>
		<% end %>
	<br>
	<br>
	<a href = "/products" class="btn btn-default btn-primary"> Go Back to Product List</a>
	
	</div></center>
	

